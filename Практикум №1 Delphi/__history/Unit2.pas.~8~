unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    Label1: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Edit4: TEdit;
    Edit5: TEdit;
    EndButton: TButton;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    RecordButton: TButton;
    procedure EndButtonClick(Sender: TObject);
    procedure Edit5Change(Sender: TObject);
    procedure RecordButtonClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation
Uses Main;

{$R *.dfm}

procedure TForm2.Edit5Change(Sender: TObject);
begin
  If StrLen(PChar(Edit5)) <> 0 then //Пока не введены все данные кнопка заблокирована
    RecordButton.Enabled:=true
  else
    EndButton.Enabled:=false;
end;

procedure TForm2.EndButtonClick(Sender: TObject);
begin
  CloseFile(f);  //Закрываю форму и перехожу опять в главное меню
  MainForm.Show;
  MainForm.Button2.SetFocus;
  Form2.close;
end;

procedure TForm2.RecordButtonClick(Sender: TObject);
begin
  z.author:= edit1.text;
  z.name:= edit2.text;
  z.publisher:= edit3.text;
  z.yearOfPublication:= edit4.text;
  z.numberOfCopies:= edit5.Text; //Заполнение данных
  Edit1.Clear;
  Edit2.Clear;
  Edit3.Clear;
  Edit4.Clear;
  Edit5.Clear; // Очистка полей после нажатия на кнопку "Записать"
  write(f,z); //Заполнение в файл
  EndButton.SetFocus;
end;

end.
